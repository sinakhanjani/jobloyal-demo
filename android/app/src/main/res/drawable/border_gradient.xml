<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="oval" >
            <gradient android:startColor="@color/blue_500" android:endColor="@color/blue_900" android:angle="0"/>

            <stroke
                android:width="7dp"
                android:color="#00000000" />
        </shape>
    </item>


    <item
        android:bottom="7dp"
        android:left="7dp"
        android:right="7dp"
        android:top="7dp">
        <shape android:shape="oval" >
            <solid android:color="#fff" />
        </shape>
    </item>

</layer-list>