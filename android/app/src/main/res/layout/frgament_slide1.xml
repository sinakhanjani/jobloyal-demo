<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/intro1"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/lato_bold"
        android:text="Are you looking for services?"
        android:textColor="#080907"
        android:gravity="center"
        android:layout_marginTop="-21dp"
        android:layout_marginHorizontal="10dp"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lato_regular"
        android:gravity="left"
        android:paddingHorizontal="15dp"
        android:text="- Gain clients more easily in your area\n- Increase your visibility and boost your income\n- Join Jobbersâ€™ network to provide your services safely"
        android:textColor="#94080907"
        android:textSize="16sp"
        app:lineHeight="28dp" />
</LinearLayout>