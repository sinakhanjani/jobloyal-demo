<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp">

    <com.dd.ShadowLayout
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="0dp"
        android:minHeight="110dp"
        app:sl_cornerRadius="20dp"
        android:layout_gravity="right"
        app:sl_dx="0dp"
        app:sl_dy="1dp"
        app:sl_shadowColor="#16000000"
        app:sl_shadowRadius="5dp"/>
    <com.dd.ShadowLayout
        android:id="@+id/shadowLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="0dp"
        android:minHeight="110dp"
        app:sl_cornerRadius="100dp"
        app:sl_dx="0dp"
        app:sl_dy="1dp"
        app:sl_shadowColor="#16000000"
        app:sl_shadowRadius="5dp">

        <com.vks.RoundFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            app:rv_backgroundColor="#FFFFFF"
            app:rv_backgroundPressColor="#F5F9FF"
            app:rv_cornerRadius_BL="100dp"
            app:rv_cornerRadius_BR="28dp"
            app:rv_cornerRadius_TL="100dp"
            app:rv_cornerRadius_TR="28dp">

            <com.vks.RoundFrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:rv_backgroundColor="#F5F9FF"
                app:rv_cornerRadius="100dp">

                <TextView
                    android:id="@+id/avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/lato_bold"
                    android:text="SK"
                    android:textColor="#3B87F0"
                    android:textSize="24dp" />
            </com.vks.RoundFrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="97dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/jobberName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="sina.khanjani"
                    android:textColor="#3B3B3B"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/workCountTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/lato_regular"
                    android:text="21 Worked"
                    android:textColor="#939393"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatRatingBar
                        android:id="@+id/ratebar"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:numStars="5"
                        android:rating="3"
                        android:theme="@style/RatingBarGray"
                        android:transformPivotX="0dp"
                        android:transformPivotY="0dp" />

                    <TextView
                        android:id="@+id/rateTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="2"
                        android:fontFamily="@font/lato_regular"
                        android:text="3.4"
                        android:textColor="#B2B2B2"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/lato_bold"
                android:paddingHorizontal="10dp"
                android:paddingVertical="11dp"
                android:text="9.1KM"
                android:textColor="@color/blue_500"
                android:textSize="15sp" />
        </com.vks.RoundFrameLayout>
    </com.dd.ShadowLayout>

</FrameLayout>