<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".jobber.suspend.SuspendFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/statusbar"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_linear_logo"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="25dp"
            />
        <TextView
            android:id="@+id/dateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="saturday_12_july"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/lato_regular"
            android:layout_marginTop="9dp"
            />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_sad"
                android:text="@string/your_account_is_suspend"
                android:fontFamily="@font/lato_bold"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:drawablePadding="15dp"
                />
            <TextView
                android:id="@+id/descriptionTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading_detail"
                android:paddingHorizontal="31dp"
                android:gravity="center"
                android:fontFamily="@font/lato_regular"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>