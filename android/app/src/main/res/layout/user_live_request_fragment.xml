<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.main.live.UserLiveRequestFragment">

    <FrameLayout
        android:id="@+id/reservedJobber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="0dp"
        android:layout_marginBottom="3dp">

        <com.dd.ShadowLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="0dp"
            android:minHeight="110dp"
            app:sl_cornerRadius="20dp"
            app:sl_dx="0dp"
            app:sl_dy="1dp"
            app:sl_shadowColor="#16000000"
            app:sl_shadowRadius="5dp" />

        <com.dd.ShadowLayout
            android:id="@+id/shadowLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="0dp"
            android:minHeight="110dp"
            app:sl_cornerRadius="100dp"
            app:sl_dx="0dp"
            app:sl_dy="1dp"
            app:sl_shadowColor="#16000000"
            app:sl_shadowRadius="5dp">

            <com.vks.RoundFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                app:rv_backgroundColor="#fff"
                app:rv_cornerRadius_BL="100dp"
                app:rv_cornerRadius_BR="28dp"
                app:rv_cornerRadius_TL="100dp"
                app:rv_cornerRadius_TR="28dp">

                <ViewFlipper
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.vks.RoundedImageView
                        android:id="@+id/avatarImage"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginHorizontal="6dp"
                        android:layout_marginVertical="10dp"

                        android:scaleType="centerCrop"
                        app:rv_backgroundColor="#F5F9FF"
                        app:rv_isOval="true"
                        app:srcCompat="@drawable/sample_avatar" />

                    <com.vks.RoundFrameLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:rv_backgroundColor="#F5F9FF"
                        app:rv_cornerRadius="100dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/lato_bold"
                            android:text="SK"
                            android:textColor="#3B87F0"
                            android:textSize="24dp" />
                    </com.vks.RoundFrameLayout>
                </ViewFlipper>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="97dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/jobberNameTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_bold"
                        android:text="sina.khanjani"
                        android:textColor="#3B3B3B"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/reservedServiceTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/lato_regular"
                        android:text="21 Worked"
                        android:textColor="#939393"
                        android:textSize="14sp" />

                </LinearLayout>

                <com.vks.RoundTextView
                    android:id="@+id/tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/lato_bold"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="3dp"
                    android:text="verify"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:rv_backgroundColor="@color/blue_500"
                    app:rv_cornerRadius="100dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginRight="11dp"
                    android:layout_marginBottom="13dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_bold"
                        android:text="51"
                        android:textColor="#939393"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:fontFamily="@font/lato_regular"
                        android:text="CHF"
                        android:textColor="#939393"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.vks.RoundFrameLayout>
        </com.dd.ShadowLayout>

    </FrameLayout>

</FrameLayout>