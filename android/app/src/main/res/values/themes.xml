<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Jobloyal" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#ffffff</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>

        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="Theme.Jobloyal.User" parent="Theme.Jobloyal">
        <item name="android:statusBarColor" tools:targetApi="l">#f5f5f5</item>
    </style>


    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="My.TextInputLayout.OutLined.Dense.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="materialThemeOverlay">@style/MyThemeOverlayFilledDense</item>
    </style>

    <style name="MyThemeOverlayFilledDense">
        <item name="editTextStyle">@style/MyTextInputEditText_filledBox_dense</item>
    </style>

    <style name="MyTextInputEditText_filledBox_dense" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>

    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/lato_bold</item>
    </style>
    <style name="Widget.BottomNavigationView.Selected"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/lato_bold</item>
    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#CFCFCF</item>
        <item name="colorControlActivated">#FFC107</item>
    </style>
    <style name="RatingBarGray" parent="Theme.AppCompat">
        <item name="colorControlNormal">#CFCFCF</item>
        <item name="colorControlActivated">#9E9E9E</item>
    </style>
</resources>